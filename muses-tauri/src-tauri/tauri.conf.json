{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Writing Assistant",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../saas-starter-base/out",
    "beforeDevCommand": "cd ../saas-starter-base && pnpm next dev",
    "beforeBuildCommand": "cd ../saas-starter-base && pnpm build",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "title": "Writing Assistant - AI Grammar Checker",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
