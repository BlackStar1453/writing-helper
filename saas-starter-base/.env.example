# 阿里云OSS配置（推荐用于中国大陆用户）
# OSS Bucket的外网访问地址
NEXT_PUBLIC_ALIYUN_OSS_ENDPOINT=https://your-bucket.oss-cn-hangzhou.aliyuncs.com
NEXT_PUBLIC_ALIYUN_OSS_BUCKET=your-bucket-name
NEXT_PUBLIC_ALIYUN_OSS_REGION=oss-cn-hangzhou

# 服务端OSS操作密钥（可选，用于文件上传等操作）
ALIYUN_OSS_ACCESS_KEY_ID=your_access_key_id
ALIYUN_OSS_ACCESS_KEY_SECRET=your_access_key_secret

# Cloudflare R2 CDN Configuration（备用）
NEXT_PUBLIC_ASSETS_CDN_URL=https://assets.yourdomain.com

# 是否启用CDN（生产环境建议设为true）
NEXT_PUBLIC_ENABLE_ASSETS_CDN=true

# 开发环境是否使用CDN（开发时建议设为false）
NEXT_PUBLIC_USE_CDN_IN_DEV=false

# 是否启用资源回退（建议保持true）
NEXT_PUBLIC_ENABLE_ASSETS_FALLBACK=true

# Cloudflare R2 配置（用于服务端上传）
CLOUDFLARE_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=elick-assets

# 版本管理配置
# 当前应用版本号（格式: v1.0.0）
NEXT_PUBLIC_APP_VERSION=v1.0.0
# 版本发布日期（ISO 8601格式）
NEXT_PUBLIC_VERSION_PUBLISHED_AT=2024-01-01T00:00:00Z
# 各平台版本可用性（true/false）
NEXT_PUBLIC_VERSION_WINDOWS_AVAILABLE=true
NEXT_PUBLIC_VERSION_MAC_INTEL_AVAILABLE=true
NEXT_PUBLIC_VERSION_MAC_SILICON_AVAILABLE=true
